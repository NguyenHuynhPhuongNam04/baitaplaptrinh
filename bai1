// Viết chương trình tìm số lớn nhất và nhỏ nhất trong 3 số thực a, b, c.
#include<stdio.h>

int main() {
    float so1, so2, so3, max; // khai báo biến
    printf ("\nNhap 3 so so1, so2, so3: ");
    scanf ("%f%f%f", &so1, &so2, &so3);
    if (max < so2)
        max = so2;
    if (max < so3)
        max = so3;
    printf ("\nSo lon nhat trong 3 so %f %f %f la %f", so1, so2, so3, max);// hiển thị nội dung và kết quả
}
